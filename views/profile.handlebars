{{> header2}}
<style>
  .gradient-custom {
    background: black;
   
  }
</style>

<section class="vh-100" style="background-color: white">
  <div class="container p-3">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <h5 class="pt-5 text-light">Welcome <br> {{data.name}}</h5>
              <p class="pt-5"><img src="https://emojipedia-us.s3.amazonaws.com/source/noto-emoji-animations/344/hugging-face_1f917.gif" height="50px" width="50px"></p>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6 class="text-warning">{{data.name}}'s Profile</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6><u>Email</u></h6>
                    <p class="text-muted">{{data.email}}</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6><u>Phone</u></h6>
                    <p class="text-muted">{{data.mobile}}</p>
                  </div>
                </div>
                <h6><u>Details</u></h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6><u>Address</u></h6>
                    <p class="text-muted">{{data.address}}</p>
                  </div>
                </div>
                <div class="d-flex justify-content-start">
                  <a href="#!"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                  <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                  <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>